/* ===== LEGAL PAGES - MODULAR SCSS STRUCTURE ===== */

// Import all partial files
@use "legal-layout";
@use "legal-navigation"; 
@use "legal-content";
@use "legal-variants";
@use "legal-footer";

.legal-shell {
  width: 100vw;
  position: relative;
  left: 50%;
  right: 50%;
  margin-left: -50vw;
  margin-right: -50vw;
  min-height: 100vh;
  background-color: var(--color-white);

  @media (max-width: bp.$breakpoint-xs) {
    position: static;
    width: 100%;
    margin: 0;
    left: auto;
    right: auto;
    min-height: 100vh;
    overflow-x: hidden;
  }

  .legal-page {
    width: 100%;
  } 

  .legal {
    width: 100%;
    display: flex;
    justify-content: center;
    position: relative; // Enable absolute positioning for children
    flex-direction: column; // Stack arrow and content vertically
    align-items: center; // Center both arrow and content

    @media (max-width: bp.$breakpoint-xs) {
      width: 100%;
      padding: 0.5rem; // Reduced padding to prevent overflow
      box-sizing: border-box; // Ensure padding is included in width calculation
      justify-content: center;
    }

    // Back arrow styling
    .legal-arrow {
      position: absolute;
      top: 2rem;
      right: 70px;
      cursor: pointer;
      z-index: 10;
      transition: all 0.3s ease;

      // Hide on large screens (1024px and above)
      @media (min-width: bp.$breakpoint-lg) {
        display: none;
      }

      img {
        width: auto;
        height: auto;
        transition: transform 0.3s ease;
      }

      &:hover {
        transform: translateX(-5px);

        img {
          transform: scale(1.1);
        }
      }

      @media (max-width: bp.$breakpoint-sm) {
        top: 1rem;
        right: 2.5rem;

        img {
          width: auto;
          height: 2rem;
        }
      }

      @media (max-width: bp.$breakpoint-xs) {
        top: 1rem;
        right: 1rem;

        img {
          width: auto;
          height: 2rem;
        }
      }
    }

    .legal-content {
      max-width: 900px;
      width: 80%;
      padding: 5rem 2rem 6rem 2rem;

      > p {
        text-align: justify;
      }
      > h3 {
        font-size: 3rem;
        font-weight: 800;
        margin: 0;
        
        // Handle long German words like "DatenschutzerklÃ¤rung"
        hyphens: auto;
        word-wrap: break-word;
        overflow-wrap: break-word;
        line-height: 1.2;
      }
      > h5 {
        color: var(--color-highlight);
        font-size: 1.5rem;
        font-weight: 800;
        margin: 2rem 0 1rem 0;
      }

      // Large desktop styles
      @media (max-width: bp.$breakpoint-lg) {
        width: 80%;
        padding: 6rem 2rem 5rem 2rem;

        > h3 {
          font-size: 2.8rem;
          hyphens: auto;
          word-wrap: break-word;
          overflow-wrap: break-word;
          line-height: 1.2;
        }

        > h5 {
          font-size: 1.4rem;
          margin: 1.8rem 0 0.9rem 0;
        }

        > p {
          font-size: 1.1rem;
          line-height: 1.6;
        }

        > ul {
          padding-left: 1.5rem;

          li {
            font-size: 1.1rem;
            line-height: 1.6;
            margin-bottom: 0.6rem;
          }
        }
      }

      // Tablet styles
      @media (max-width: bp.$breakpoint-md) {
        width: 80%;
        padding: 7rem 1.5rem 4rem 1.5rem;

        > h3 {
          font-size: 2.4rem;
          hyphens: auto;
          word-wrap: break-word;
          overflow-wrap: break-word;
          line-height: 1.2;
        }

        > h5 {
          font-size: 1.3rem;
          margin: 1.6rem 0 0.8rem 0;
        }

        > p {
          font-size: 1rem;
          line-height: 1.5;
        }

        > ul {
          padding-left: 1.3rem;

          li {
            font-size: 1rem;
            line-height: 1.5;
            margin-bottom: 0.5rem;
          }
        }
      }

      // Small tablet styles
      @media (max-width: bp.$breakpoint-sm) {
        width: 85%;
        padding: 5rem 1rem 3rem 1rem;

        > h3 {
          font-size: 2.1rem;
          hyphens: auto;
          word-wrap: break-word;
          overflow-wrap: break-word;
          line-height: 1.2;
        }

        > h5 {
          font-size: 1.2rem;
          margin: 1.4rem 0 0.7rem 0;
        }

        > p {
          font-size: 0.95rem;
          line-height: 1.5;
        }

        > ul {
          padding-left: 1.2rem;

          li {
            font-size: 1rem;
            line-height: 1.5;
            margin-bottom: 0.5rem;
          }
        }
      }

      // Mobile styles for all content types
      @media (max-width: bp.$breakpoint-xs) {
        width: 90%;
        padding: 2rem 0.75rem 2.5rem 0.75rem;

        > h3 {
          font-size: 1.8rem;
          // Ensure hyphenation works on mobile
          hyphens: auto;
          word-wrap: break-word;
          overflow-wrap: break-word;
          line-height: 1.2;
        }

        > h5 {
          font-size: 1.1rem;
          margin: 1.5rem 0 0.75rem 0;
        }

        > p {
          font-size: 0.9rem;
          line-height: 1.6;
          margin-bottom: 1rem;
        }

        > ul {
          padding-left: 1.2rem;

          li {
            font-size: 1rem;
            line-height: 1.5;
            margin-bottom: 0.5rem;
          }
        }

        a {
          word-break: break-word;
        }
      }

      // Specific styles for Datenschutz page
      &.content-datenschutz {
        // Mobile styles for Datenschutz
        @media (max-width: bp.$breakpoint-sm) {
          width: 85%;

          > h3 {
            font-size: 2rem;
            word-wrap: break-word;
            overflow-wrap: break-word;
            line-height: 1.2;
          }

          > h5 {
            font-size: 1.25rem;
            margin: 1.5rem 0 0.75rem 0;
          }

          > p {
            font-size: 1rem;
            line-height: 1.5;
          }
        }

        @media (max-width: bp.$breakpoint-xs) {
          width: 95%;
          padding: 0.75rem;

          > h3 {
            font-size: 1.75rem;
          }

          > h5 {
            font-size: 1.1rem;
          }
        }

        // Optimized breakpoint-xs styles for datenschutz
        @media (max-width: bp.$breakpoint-xs) {
          width: 95%;
          padding: 5rem 1rem 2rem 1rem; 

          > h3 {
            font-size: 1.6rem;
            margin-bottom: 1rem;
            // Use proper German hyphenation instead of break-all
            hyphens: auto;
            word-wrap: break-word;
            overflow-wrap: break-word;
            line-height: 1.2;
          }

          > h5 {
            font-size: 1rem;
            margin: 1.2rem 0 0.6rem 0;
          }

          > p {
            font-size: 0.85rem;
            line-height: 1.4;
          }
        }
      }

      // Specific styles for Impressum page
      &.content-impressum {
        // Add specific styles for impressum if needed

        // Mobile styles for Impressum
        @media (max-width: bp.$breakpoint-lg) {
          width: 90%;
          padding: 5rem 1rem 3rem 1rem;

          > h3 {
            font-size: 2rem;
          }

          > h5 {
            font-size: 1.25rem;
            margin: 1.5rem 0 0.75rem 0;
          }

          > p {
            font-size: 1.2rem;
            line-height: 1.5;
          }

          // Impressum-specific: Make contact info more compact
          div p {
            margin-bottom: 0.5rem;
          }
        }
        @media (max-width: bp.$breakpoint-md) {
          width: 90%;
          padding: 5rem 1rem 3rem 1rem;

          > h3 {
            font-size: 2rem;
            // Ensure hyphenation works on tablets
            hyphens: auto;
            word-wrap: break-word;
            overflow-wrap: break-word;
            line-height: 1.2;
          }

          > h5 {
            font-size: 1.25rem;
            margin: 1.5rem 0 0.75rem 0;
          }

          > p {
            font-size: 1.2rem;
            line-height: 1.5;
          }

          // Impressum-specific: Make contact info more compact
          div p {
            margin-bottom: 0.5rem;
          }
        }

        // Breakpoint-sm styles for impressum
        @media (max-width: bp.$breakpoint-sm) {
          width: 90%;
          padding: 5rem 1rem 3rem 1rem;

          > h3 {
            font-size: 1.8rem;
            // Ensure hyphenation works on small tablets
            hyphens: auto;
            word-wrap: break-word;
            overflow-wrap: break-word;
            line-height: 1.2;
          }

          > h5 {
            font-size: 1.2rem;
            margin: 1.3rem 0 0.7rem 0;
          }

          > p {
            font-size: 1.1rem;
            line-height: 1.45;
          }

          // Impressum-specific: Contact info styling for sm screens
          div p {
            margin-bottom: 0.4rem;
            font-size: 1.1rem;
          }
        }

        // Enhanced breakpoint-xs styles for impressum
        @media (max-width: bp.$breakpoint-xs) {
          width: 95%;
          padding: 5rem 1rem 2rem 1rem; // Match datenschutz padding exactly

          > h3 {
            font-size: 1.6rem;
            // Ensure hyphenation works on mobile for Impressum
            hyphens: auto;
            word-wrap: break-word;
            overflow-wrap: break-word;
            line-height: 1.2;
          }

          > h5 {
            font-size: 1rem;
            margin: 1.2rem 0 0.6rem 0;
          }

          > p {
            font-size: 1rem;
            line-height: 1.4;
          }

          // Impressum-specific: Make contact info even more compact on mobile
          div p {
            margin-bottom: 0.3rem;
            font-size: 1rem;
          }
        }
      }
    }
  }

  // Footer visibility controls
  .footer-desktop {
    display: block;

    @media (max-width: bp.$breakpoint-lg) {
      display: none; // Hide regular footer on mobile
    }
  }

  .footer-mobile {
    display: none; // Hide mobile footer by default

    @media (max-width: bp.$breakpoint-lg) {
      display: block; // Show mobile footer only on xs
    }
  }
}
